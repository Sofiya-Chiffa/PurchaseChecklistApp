<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/fourth"
    android:layout_gravity="center"
    android:alpha="1"
    android:id="@+id/view_purchase">

    <SurfaceView
        android:id="@+id/sftp"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:alpha="0"/>

    <SurfaceView
        android:id="@+id/sflf"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/sftp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:alpha="0"/>

    <TextView
        android:id="@+id/product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/sftp"
        app:layout_constraintLeft_toRightOf="@id/sflf"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintVertical_chainStyle="packed"/>

    <TextView
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="count"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/sftp"
        app:layout_constraintLeft_toRightOf="@id/product"
        app:layout_constraintRight_toLeftOf="@id/price"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintVertical_chainStyle="packed"/>

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/sftp"
        app:layout_constraintRight_toLeftOf="@id/sfrt"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintVertical_chainStyle="packed"/>

    <TextView
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/product"
        app:layout_constraintLeft_toRightOf="@id/sflf"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintVertical_chainStyle="packed"/>

    <SurfaceView
        android:id="@+id/sfrt"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/sftp"
        app:layout_constraintRight_toRightOf="parent"
        android:alpha="0"/>

    <SurfaceView
        android:id="@+id/sfbt"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:layout_constraintTop_toBottomOf="@id/category"
        app:layout_constraintLeft_toLeftOf="parent"
        android:alpha="0"/>


</androidx.constraintlayout.widget.ConstraintLayout>